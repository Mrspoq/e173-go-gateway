# E173 Go Gateway - Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
SERVER_PORT=8080
GIN_MODE=debug
LOG_LEVEL=info
LOG_FORMAT=text

# Database Configuration
DATABASE_URL=postgres://DB_USER:DB_PASSWORD@localhost:5432/DB_NAME?sslmode=disable
DB_USER=e173_user
DB_PASSWORD=YOUR_DB_PASSWORD_HERE
DB_NAME=e173_gateway

# Asterisk AMI Configuration
ASTERISK_AMI_HOST=localhost
ASTERISK_AMI_PORT=5038
ASTERISK_AMI_USER=admin
ASTERISK_AMI_PASS=YOUR_AMI_PASSWORD_HERE

# JWT Authentication
JWT_SECRET=YOUR_JWT_SECRET_HERE
JWT_EXPIRY=24h
REFRESH_EXPIRY=168h

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=e173:
REDIS_DEFAULT_TTL=24h

# Admin Credentials (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=YOUR_ADMIN_PASSWORD_HERE

# GitHub Configuration (for MCP)
GITHUB_TOKEN=YOUR_GITHUB_TOKEN_HERE

# Production Notes:
# - Change GIN_MODE to "release" for production
# - Use strong, randomly generated passwords
# - Consider using environment-specific configuration files
# - Use secrets management for sensitive credentials in production
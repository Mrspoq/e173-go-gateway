{{define "modems/list.tmpl"}}
{{template "base" .}}
{{end}}

{{define "content"}}
<div class="max-w-7xl mx-auto px-4 py-6">
    <!-- Header -->
    <div class="md:flex md:items-center md:justify-between mb-8">
        <div class="flex-1 min-w-0">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 dark:text-white sm:text-3xl sm:truncate">
                Modem Management
            </h2>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                Monitor and control E173 modems
            </p>
        </div>
        <div class="mt-4 flex md:mt-0 md:ml-4">
            <button hx-get="/api/v1/modems" hx-target="#modem-list" hx-swap="innerHTML" 
                    class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                Refresh
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="mb-6 bg-white dark:bg-gray-800 rounded-lg shadow p-4">
        <div class="flex flex-wrap gap-2">
            <button class="px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                All Modems
            </button>
            <button class="px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-600">
                Online
            </button>
            <button class="px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-600">
                Offline
            </button>
            <button class="px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-600">
                In Call
            </button>
        </div>
    </div>

    <!-- Modem List -->
    <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-md">
        <ul id="modem-list" class="divide-y divide-gray-200 dark:divide-gray-700"
            hx-get="/api/v1/modems" 
            hx-trigger="load, every 10s from:closest body" 
            hx-swap="innerHTML">
            <!-- Loading placeholder -->
            <li class="px-6 py-4">
                <div class="animate-pulse flex space-x-4">
                    <div class="rounded-full bg-gray-300 dark:bg-gray-600 h-10 w-10"></div>
                    <div class="flex-1 space-y-2 py-1">
                        <div class="h-4 bg-gray-300 dark:bg-gray-600 rounded w-3/4"></div>
                        <div class="h-4 bg-gray-300 dark:bg-gray-600 rounded w-1/2"></div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>
{{end}}

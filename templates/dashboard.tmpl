{{template "base" .}}

{{define "dashboard_content"}}
<div class="max-w-7xl mx-auto px-4 py-6">
    <!-- Dashboard Header -->
    <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Real-Time Dashboard</h2>
        <p class="text-gray-600 dark:text-gray-300">Live monitoring and control for E173 gateway modems</p>
    </div>

    <!-- Stats Cards Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8" 
         hx-get="/api/stats" 
         hx-trigger="load, every 5s" 
         hx-swap="innerHTML">
        <!-- Loading placeholders will be replaced by API response -->
        <div class="animate-pulse">Loading stats...</div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Live Modem Status Panel -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Live Modem Status</h3>
                <div class="animate-pulse htmx-indicator">
                    <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                </div>
            </div>
            <div class="space-y-4" 
                 hx-get="/api/modems/status" 
                 hx-trigger="load, every 5s" 
                 hx-swap="innerHTML">
                <div class="animate-pulse">Loading modem status...</div>
            </div>
        </div>

        <!-- Recent Call Activity Panel -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Call Activity</h3>
                <div class="animate-pulse htmx-indicator">
                    <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
                </div>
            </div>
            <div class="max-h-96 overflow-y-auto">
                <div class="space-y-3" 
                     hx-get="/api/cdr/recent" 
                     hx-trigger="load, every 3s" 
                     hx-swap="innerHTML">
                    <div class="animate-pulse">Loading recent calls...</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow p-6">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Quick Actions</h3>
        <div class="flex flex-wrap gap-4">
            <a href="/customers" class="bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded transition-colors">
                Manage Customers
            </a>
            <a href="/modems" class="bg-green-500 hover:bg-green-700 text-white font-medium py-2 px-4 rounded transition-colors">
                Modem Control
            </a>
            <a href="/sims" class="bg-purple-500 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded transition-colors">
                SIM Management
            </a>
            <a href="/gateways" class="bg-orange-500 hover:bg-orange-700 text-white font-medium py-2 px-4 rounded transition-colors">
                Gateway Settings
            </a>
        </div>
    </div>
</div>
{{end}}

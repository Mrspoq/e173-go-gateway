{{range .}}
<tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
        {{.PhoneNumber}}
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
        {{.Operator}}
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
        {{if .Balance.Valid}}
        <span id="sim-balance-{{.ID}}" 
              hx-get="/api/v1/simcards/{{.ID}}/balance"
              hx-trigger="every 30s"
              hx-swap="innerHTML">
            {{.Balance.Float64 | printf "%.2f"}}
            {{if .BalanceCurrency.Valid}} {{.BalanceCurrency.String}}{{end}}
        </span>
        {{else}}
        <span class="text-gray-400">N/A</span>
        {{end}}
    </td>
    <td class="px-6 py-4 whitespace-nowrap">
        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
            {{if eq .Status "active"}}bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200
            {{else if eq .Status "low_balance"}}bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200
            {{else if eq .Status "blocked"}}bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200
            {{else}}bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200{{end}}">
            {{.Status}}
        </span>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
        {{if .ModemID}}Modem #{{.ModemID}}{{else}}-{{end}}
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
        <div class="flex justify-end space-x-3">
            <a href="/sims/{{.ID}}/recharge" 
               class="text-green-600 hover:text-green-900 dark:text-green-400 dark:hover:text-green-300">
                Recharge
            </a>
            <a href="#" hx-get="/sims/{{.ID}}/edit" hx-target="#modal" 
               class="text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300">
                Edit
            </a>
        </div>
    </td>
</tr>
{{else}}
<tr>
    <td colspan="6" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">
        No SIM cards found
    </td>
</tr>
{{end}}

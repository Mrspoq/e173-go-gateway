{{template "base" .}}

{{define "body"}}
<!-- Simple Dashboard Test -->
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">E173 Gateway Dashboard</h1>
    
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">System Status</h2>
        <p class="text-gray-600 dark:text-gray-300">Dashboard is loading successfully!</p>
        
        <div class="mt-4 grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-green-100 dark:bg-green-800 p-4 rounded">
                <h3 class="font-medium text-green-800 dark:text-green-100">Server</h3>
                <p class="text-green-600 dark:text-green-200">Running</p>
            </div>
            <div class="bg-blue-100 dark:bg-blue-800 p-4 rounded">
                <h3 class="font-medium text-blue-800 dark:text-blue-100">Database</h3>
                <p class="text-blue-600 dark:text-blue-200">Connected</p>
            </div>
            <div class="bg-yellow-100 dark:bg-yellow-800 p-4 rounded">
                <h3 class="font-medium text-yellow-800 dark:text-yellow-100">AMI</h3>
                <p class="text-yellow-600 dark:text-yellow-200">Connecting...</p>
            </div>
        </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Quick Actions</h2>
        <div class="space-x-4">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                View Modems
            </button>
            <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                Check SIMs
            </button>
        </div>
    </div>
</div>
{{end}}

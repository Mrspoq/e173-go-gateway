{{define "dashboard_standalone.tmpl"}}
<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.title}} - E173 Gateway</title>
    
    <!-- Tailwind CSS -->
    <link href="/static/bundle.css" rel="stylesheet">
    
    <!-- HTMX -->
    <script src="https://unpkg.com/htmx.org@1.9.10" integrity="sha384-D1Kt99CQMDuVetoL1lrYwg5t+9QdHe7NLX/SoJYkXDFfX37iInKRy5xLSi8nO7UC" crossorigin="anonymous"></script>
    
    <!-- Dark mode initialization -->
    <script>
        // Check for saved theme preference or default to 'light'
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark')
        } else {
            document.documentElement.classList.remove('dark')
        }
        
        function toggleDarkMode() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark')
                localStorage.theme = 'light'
            } else {
                document.documentElement.classList.add('dark')
                localStorage.theme = 'dark'
            }
        }
    </script>
</head>
<body class="h-full bg-gray-50 dark:bg-gray-900" hx-boost="true">
    <div class="min-h-full">
        <!-- Navigation -->
        {{template "nav" .}}
        
        <!-- Main content -->
        <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <div id="page" class="px-4 py-6 sm:px-0">
                <div class="max-w-7xl mx-auto px-4 py-6">
                    <!-- Dashboard Header -->
                    <div class="mb-8">
                        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Real-Time Dashboard</h2>
                        <p class="text-gray-600 dark:text-gray-300">Live monitoring and control for E173 gateway modems</p>
                    </div>

                    <!-- Stats Cards Grid -->
                    <div class="mb-12" 
                         id="stats-cards"
                         hx-get="/api/stats/cards" 
                         hx-trigger="load" 
                         hx-swap="innerHTML">
                        <!-- Loading placeholders will be replaced by API response -->
                        <div class="col-span-5 text-center animate-pulse">Loading stats...</div>
                    </div>

                    <!-- Main Content Grid -->
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                        <!-- Active Calls Panel -->
                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                            <div class="flex items-center justify-between mb-6">
                                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Active Calls</h3>
                                <div class="htmx-indicator">
                                    <div class="w-3 h-3 bg-red-500 rounded-full animate-pulse"></div>
                                </div>
                            </div>
                            <div class="space-y-2" 
                                 hx-get="/api/v1/calls/active" 
                                 hx-trigger="load, every 3s" 
                                 hx-swap="innerHTML">
                                <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                                    <svg class="w-8 h-8 mx-auto mb-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                    </svg>
                                    <p class="text-sm">No active calls</p>
                                </div>
                            </div>
                        </div>

                        <!-- Live Modem Status Panel -->
                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                            <div class="flex items-center justify-between mb-6">
                                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Live Modem Status</h3>
                                <div class="htmx-indicator">
                                    <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
                                </div>
                            </div>
                            <div class="space-y-4" 
                                 hx-get="/api/modems/status" 
                                 hx-trigger="load, every 5s" 
                                 hx-swap="innerHTML">
                                <div class="animate-pulse">Loading modem status...</div>
                            </div>
                        </div>

                        <!-- Recent Call Activity Panel -->
                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                            <div class="flex items-center justify-between mb-6">
                                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Call Activity</h3>
                                <div class="htmx-indicator">
                                    <div class="w-3 h-3 bg-purple-500 rounded-full animate-pulse"></div>
                                </div>
                            </div>
                            <div class="max-h-96 overflow-y-auto">
                                <div class="space-y-3" 
                                     hx-get="/api/cdr/recent/list" 
                                     hx-trigger="load, every 3s" 
                                     hx-swap="innerHTML">
                                    <div class="animate-pulse">Loading recent calls...</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Quick Actions</h3>
                        <div class="flex flex-wrap gap-4">
                            <a href="/customers" class="bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded transition-colors">
                                Manage Customers
                            </a>
                            <a href="/modems" class="bg-green-500 hover:bg-green-700 text-white font-medium py-2 px-4 rounded transition-colors">
                                Modem Control
                            </a>
                            <a href="/sims" class="bg-purple-500 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded transition-colors">
                                SIM Management
                            </a>
                            <a href="/gateways" class="bg-orange-500 hover:bg-orange-700 text-white font-medium py-2 px-4 rounded transition-colors">
                                Gateway Settings
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
{{end}}

{{define "modems_standalone.tmpl"}}
<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modem Management - E173 Gateway</title>
    
    <!-- Tailwind CSS -->
    <link href="/static/bundle.css" rel="stylesheet">
    
    <!-- HTMX -->
    <script src="https://unpkg.com/htmx.org@1.9.10" integrity="sha384-D1Kt99CQMDuVetoL1lrYwg5t+9QdHe7NLX/SoJYkXDFfX37iInKRy5xLSi8nO7UC" crossorigin="anonymous"></script>
    
    <!-- Dark mode initialization -->
    <script>
        // Check for saved theme preference or default to 'light'
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark')
        } else {
            document.documentElement.classList.remove('dark')
        }
        
        function toggleDarkMode() {
            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark')
                localStorage.theme = 'light'
            } else {
                document.documentElement.classList.add('dark')
                localStorage.theme = 'dark'
            }
        }
    </script>
</head>
<body class="h-full bg-gray-50 dark:bg-gray-900" hx-boost="true">
    <div class="min-h-full">
        <!-- Navigation -->
        {{template "nav" .}}
        
        <!-- Main content -->
        <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <div id="page" class="px-4 py-6 sm:px-0">
                <div class="max-w-7xl mx-auto px-4 py-6">
                    <!-- Header -->
                    <div class="mb-8">
                        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Modem Management</h2>
                        <p class="text-gray-600 dark:text-gray-300">Monitor and control E173 USB modems across all gateways</p>
                    </div>

                    <!-- Stats Cards -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                    </div>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Online Modems</dt>
                                        <dd class="text-lg font-medium text-gray-900 dark:text-white" hx-get="/api/stats/modems" hx-trigger="load, every 10s from:closest body" hx-swap="innerHTML">Loading...</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 bg-red-500 rounded-full flex items-center justify-center">
                                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                    </div>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Offline Modems</dt>
                                        <dd class="text-lg font-medium text-gray-900 dark:text-white">2</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                        </svg>
                                    </div>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Active Calls</dt>
                                        <dd class="text-lg font-medium text-gray-900 dark:text-white">5</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                    </div>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Needs Attention</dt>
                                        <dd class="text-lg font-medium text-gray-900 dark:text-white">1</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modem List -->
                    <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
                        <div class="px-4 py-5 sm:p-6">
                            <div class="flex justify-between items-center mb-6">
                                <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">
                                    Live Modem Status
                                </h3>
                                <button class="bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md transition-colors"
                                        hx-get="/api/modems/status" 
                                        hx-target="#modem-list" 
                                        hx-swap="innerHTML">
                                    Refresh Status
                                </button>
                            </div>
                            
                            <div id="modem-list" 
                                 hx-get="/api/modems/status" 
                                 hx-trigger="load, every 15s" 
                                 hx-swap="innerHTML">
                                <div class="animate-pulse">Loading modem status...</div>
                            </div>
                        </div>
                    </div>

                    <!-- Bulk Actions -->
                    <div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Bulk Actions</h3>
                        <div class="flex flex-wrap gap-4">
                            <button class="bg-green-500 hover:bg-green-700 text-white font-medium py-2 px-4 rounded transition-colors">
                                Enable All Modems
                            </button>
                            <button class="bg-red-500 hover:bg-red-700 text-white font-medium py-2 px-4 rounded transition-colors">
                                Disable All Modems
                            </button>
                            <button class="bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded transition-colors">
                                Restart All Modems
                            </button>
                            <button class="bg-yellow-500 hover:bg-yellow-700 text-white font-medium py-2 px-4 rounded transition-colors">
                                Check Signal Strength
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
{{end}}
